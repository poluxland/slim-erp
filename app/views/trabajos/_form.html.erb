
<%= simple_form_for(@trabajo) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :ito %>
    <%= f.input :detalle %>
    <%= f.input :valor %>
    <%= f.input :op %>
    <%= f.input :factura %>
    <%= f.input :terminado %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
